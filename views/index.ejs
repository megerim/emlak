<%- include("partials/_head") %>

<body>

<!-- WRAPPER
=====================================================================================================================-->
<div class="ts-page-wrapper ts-homepage" id="page-top">

    <%- include("partials/_header") %>

    <!-- HERO SLIDER
    =================================================================================================================-->
    <section id="ts-hero" class="mb-0 bg-img-yeni">


        
        <a href="https://api.whatsapp.com/send?phone=+905423202473&text=Merhaba" class="float" target="_blank">
            <i class="fa fa-whatsapp my-float"></i>
            </a>



            
        <!--Container-->
        <div class="container py-5 container-2">
            <div class="row ts-center__both ts-h__auto ts-min-h__70vh">

                <!-- LEFT SIDE (TITLE)
                =====================================================================================================-->
                <div class="col-sm-6 col-md-8 text-white">
                    <!--Title-->
                    <h1 class="mb-2">Hayallerinizdeki evi keşfedin!</h1>
                    <!--Subtitle-->
                    <h4 class="ts-opacity__50">Arsadan,ofise aradığınız her şey burada.</h4>
                    <!--More properties button-->
                    <a href="#featured-properties" class="ts-scroll btn-dark btn-sm d-none d-md-inline-block" data-bg-color="rgba(255,255,255,.3)">Daha Fazla Mülk Keşfet</a>
                </div>

                <!-- RIGHT SIDE (FORM)
                =====================================================================================================-->
                <div class="col-sm-6 col-md-4">

                    <!--Form-->
                    <form class="ts-form py-3 px-4 ts-border-radius__md ts-shadow__md" data-bg-color="rgba(255,255,255,.9)">

                        <h2 class="baslik3">Mülk Arayın</h2>

                        <!--Keyword-->
                        <div class="form-group my-2">
                            <input type="text" class="form-control" id="keyword" name="keyword" placeholder="Adres, şehir veya posta kodu">
                        </div>

                        <!--Type-->
                        <select class="custom-select my-2" id="type" name="type">
                            <option value="">Tür</option>
                            <option value="1">Apartman</option>
                            <option value="2">Villa</option>
                            <option value="3">Arsa</option>
                            <option value="4">İş yeri</option>
                        </select>

                        <!--Status-->
                        <select class="custom-select my-2" id="status" name="status">
                            <option value="">Durum</option>
                            <option value="1">Kiralık</option>
                            <option value="2">Satılık</option>
                        </select>

                        <!--Max Price-->
                        <select class="custom-select my-2" id="price" name="status">
                            <option value="">Maksimum Fiyat</option>
                            <option value="1">$ 5,000</option>
                            <option value="2">$ 10,000</option>
                            <option value="3">$ 20,000</option>
                            <option value="4">$ 50,000</option>
                        </select>

                        <!--Submit button-->
                        <div class="form-group my-2">
                            <button type="submit" class="btn btn-primary w-100" id="search-btn">Ara</button>
                        </div>

                    </form>
                </div>
                <!--end col-sm-6-->

            </div>
            <!--end row-->

        </div>
        <!--end container-->

        <div class="ts-background ts-hero-slider ts-bg-black">
            <div class="ts-background-image ts-opacity__50">

                <div class="owl-carousel" data-owl-loop="1" data-owl-fadeout="1">
                    <div class="slide" data-bg-image="assets/img/bg-dining-room.jpg"></div>
                    <div class="slide" data-bg-image="assets/img/bg-stairs.jpg"></div>
                </div>
            </div>
        </div>

    </section>
       <!-- CATEGORY SELECT
        =============================================================================================================-->
        <section id="category-select" class="ts-icons-select ts-icons-select__dark" data-bg-color="#292929">

            <!--Cabins-->
            <a href="/list">
                <aside>17</aside>
                <img src="/svg/icon-cabins-w.svg" alt="">
                <figure>
                    <h6 class="deneme">Satılık</h6>
                    <small>Keşfet</small>
                </figure>
            </a>

            <!--Apartments-->
            <a href="/list">
                <aside>32</aside>
                <img src="/svg/icon-apartment-w.svg" alt="">
                <figure>
                    <h6 class="deneme">Kiralık</h6>
                    <small>Keşfet</small>
                </figure>
            </a>

            <!--Houses-->
            <a href="/list">
                <aside>86</aside>
                <img src="/svg/icon-house-w.svg" alt="">
                <figure>
                    <h6 class="deneme">Villa</h6>
                    <small>Keşfet</small>
                </figure>
            </a>

            <!--Offices-->
            <a href="/list">
                <aside>64</aside>
                <img src="/svg/icon-offices-w.svg" alt="">
                <figure>
                    <h6 class="deneme">Ofis</h6>
                    <small>Keşfet</small>
                </figure>
            </a>

            <!--Garages-->
            <a href="/list">
                <aside>21</aside>
                <img src="/svg/icon-garages-w.svg" alt="">
                <figure>
                    <h6 class="deneme">Daire</h6>
                    <small>Keşfet</small>
                </figure>
            </a>

            <!--Lands-->
            <a href="/list">
                <aside>46</aside>
                <img src="/svg/icon-land-w.svg" alt="">
                <figure>
                    <h6 class="deneme">Arsa</h6>
                    <small>Keşfet</small>
                </figure>
            </a>

        </section>
    <!--end ts-hero-->

    <!--*********************************************************************************************************-->
    <!-- MAIN ***************************************************************************************************-->
    <!--*********************************************************************************************************-->

  

    <%- include("partials/_footer") %>

</div>
<!--end page-->

